<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="20dp">

    <ImageView
        android:id="@+id/nav_header_iv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintBottom_toTopOf="@id/nav_header_tv_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nav_header_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="아이디를 입력해주세요"
        app:layout_constraintBottom_toTopOf="@id/nav_header_tv_id"
        app:layout_constraintEnd_toEndOf="@id/nav_header_iv_profile"
        app:layout_constraintStart_toStartOf="@+id/nav_header_iv_profile"
        app:layout_constraintTop_toBottomOf="@id/nav_header_iv_profile" />

    <TextView
        android:id="@+id/nav_header_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="아이디"
        android:textSize="10sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/nav_header_tv_name"
        app:layout_constraintStart_toStartOf="@id/nav_header_tv_name"
        app:layout_constraintTop_toBottomOf="@id/nav_header_tv_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
